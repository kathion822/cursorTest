.my-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}
.user-info-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  color: white;
  position: relative;
}
.user-info-section .avatar-container {
  margin-right: 30rpx;
}
.user-info-section .avatar-container .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}
.user-info-section .user-details {
  flex: 1;
}
.user-info-section .user-details .username {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}
.user-info-section .user-details .user-id {
  font-size: 24rpx;
  opacity: 0.8;
  display: block;
  margin-bottom: 8rpx;
}
.user-info-section .user-details .login-type {
  font-size: 22rpx;
  opacity: 0.7;
}
.user-info-section .logout-btn {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 15rpx 25rpx;
  border-radius: 25rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}
.user-info-section .logout-btn text {
  font-size: 24rpx;
  color: white;
}
.user-info-section .logout-btn:active {
  background: rgba(255, 255, 255, 0.3);
}
.login-section {
  background: white;
  padding: 40rpx 30rpx;
  text-align: center;
}
.login-section .login-prompt {
  margin-bottom: 30rpx;
}
.login-section .login-prompt .login-text {
  font-size: 28rpx;
  color: #666;
}
.login-section .login-buttons .login-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}
.login-section .login-buttons .login-btn.primary {
  background: #2867ce;
  color: white;
}
.login-section .login-buttons .login-btn .login-icon {
  font-size: 32rpx;
}
.menu-section {
  background: white;
  margin-top: 20rpx;
}
.menu-section .menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.menu-section .menu-item:last-child {
  border-bottom: none;
}
.menu-section .menu-item:active {
  background-color: #f8f8f8;
}
.menu-section .menu-item .menu-icon {
  width: 60rpx;
  text-align: center;
  margin-right: 20rpx;
}
.menu-section .menu-item .menu-icon .iconfont {
  font-size: 36rpx;
  color: #2867ce;
}
.menu-section .menu-item .menu-content {
  flex: 1;
}
.menu-section .menu-item .menu-content .menu-title {
  font-size: 30rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}
.menu-section .menu-item .menu-content .menu-desc {
  font-size: 24rpx;
  color: #999;
}
.menu-section .menu-item .menu-arrow .iconfont {
  font-size: 24rpx;
  color: #ccc;
}