.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
}
.login-header {
  text-align: center;
  margin-bottom: 80rpx;
  padding-top: 60rpx;
}
.login-header .login-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 20rpx;
}
.login-header .login-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}
.login-methods {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
}
.login-methods .login-method-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.login-methods .login-method-item:last-child {
  border-bottom: none;
}
.login-methods .login-method-item:active {
  background-color: #f8f8f8;
}
.login-methods .login-method-item .method-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  font-size: 40rpx;
}
.login-methods .login-method-item .method-icon.wechat {
  background: #07c160;
  color: white;
}
.login-methods .login-method-item .method-icon.quick {
  background: #ff6b35;
  color: white;
}
.login-methods .login-method-item .method-icon.password {
  background: #2867ce;
  color: white;
}
.login-methods .login-method-item .method-icon.sms {
  background: #ffc107;
  color: white;
}
.login-methods .login-method-item .method-info {
  flex: 1;
}
.login-methods .login-method-item .method-info .method-title {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
  font-weight: 500;
}
.login-methods .login-method-item .method-info .method-desc {
  font-size: 24rpx;
  color: #999;
}
.login-methods .login-method-item .method-arrow {
  font-size: 32rpx;
  color: #ccc;
}
.login-options {
  text-align: center;
}
.login-options .register-link, .login-options .forgot-password {
  display: block;
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  margin-bottom: 20rpx;
  text-decoration: underline;
}
.test-section {
  margin-top: 40rpx;
  text-align: center;
}
.test-section .test-btn {
  width: 100%;
  height: 80rpx;
  background: #ff6b35;
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 30rpx;
}
.login-modal {
  background: white;
  border-radius: 20rpx;
  width: 600rpx;
}
.login-modal .modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.login-modal .modal-header .modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.login-modal .modal-header .close-btn {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}
.login-modal .modal-body {
  padding: 30rpx;
}
.login-modal .modal-body .input-group {
  margin-bottom: 30rpx;
}
.login-modal .modal-body .input-group.sms-code-group {
  display: flex;
  gap: 20rpx;
}
.login-modal .modal-body .input-group.sms-code-group .sms-input {
  flex: 1;
}
.login-modal .modal-body .input-group.sms-code-group .send-code-btn {
  width: 200rpx;
  height: 80rpx;
  background: #2867ce;
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 24rpx;
}
.login-modal .modal-body .input-group.sms-code-group .send-code-btn:disabled {
  background: #ccc;
}
.login-modal .modal-body .input-group .input-field {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.login-modal .modal-body .submit-btn {
  width: 100%;
  height: 80rpx;
  background: #2867ce;
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 30rpx;
}